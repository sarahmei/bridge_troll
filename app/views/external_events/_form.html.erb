<%= form_for(@external_event) do |f| %>
  <% if @external_event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@external_event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% @external_event.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row row-long-fields">
    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :url, 'URL' %>
      <%= f.text_field :url %>
    </div>
    <div class="field">
      <%= f.label :starts_at %>
      <%= f.date_select :starts_at %>
    </div>
    <div class="field">
      <%= f.label :ends_at %>
      <%= f.date_select :ends_at %>
    </div>
    <div class="field">
      <%= f.label :city %>
      <%= f.text_field :city %>
    </div>
    <div class="field">
      <%= f.label :location %>
      <%= f.text_field :location %>
    </div>
    <div class="field">
      <%= f.label :organizers %>
      <%= f.text_area :organizers %>
    </div>
    <div class="actions">
      <%= f.submit class: :btn %>
    </div>
  </div>
<% end %>
