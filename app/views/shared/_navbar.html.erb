<nav class="navbar navbar-fixed-top">
  <%= link_to events_path, class: 'app-name' do %>
    <%= image_tag asset_path('logo.svg') %>
  <% end %>
  <% if user_signed_in? %>
    <span class="nav-blurb">Found a bug? Or some unexpected behavior? <a href="https://github.com/railsbridge/bridge_troll/issues" target="_blank">Let us know</a>!</span>
  <% end %>
  <ul class="nav navbar-nav navbar-right">
    <% if user_signed_in? %>
      <li>
        <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: 'btn' %>
      </li>
      <li>
        <%= link_to 'Account',edit_user_registration_path, class: 'btn' %>
      </li>
      <li>
        <%= link_to 'Profile', user_profile_path(current_user.id), class: 'btn' %>
      </li>
    <% else %>
      <li id="sign_in">
        <a href="#sign_in_dialog" role="button" class="btn sign-in-button" data-return-to="<%= request.fullpath %>">Sign In</a>
      </li>
      <li>
        <%= link_to "Sign Up", new_user_registration_path, class: 'btn btn-primary' %>
      </li>
    <% end %>
  </ul>
</nav>
